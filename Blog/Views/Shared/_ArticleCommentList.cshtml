@model IEnumerable<Blog.Models.CommentViewModel>

<h4>Комментарии</h4>

@foreach (var comment in Model) {
    <div class="form-group">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    Комментарий к статье: <a asp-controller="Article" asp-action="ViewArticle" asp-route-id="@comment.Article.Id">@comment.Article.Title</a>
                </h5>
                <p class="card-text">@comment.Content</p>
            </div>
        </div>
        <p class="text-right">
            <span class="badge bg-success text-light">@comment.Author</span>
        </p>
    </div>
}
