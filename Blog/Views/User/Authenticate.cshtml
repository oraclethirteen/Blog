@model Blog.Models.User.UserAuthenticateViewModel

@{
    ViewData["Title"] = "Вход";
}
<div style="text-align:center">
    <h2>Вход в приложение</h2>
</div>
<div id="form-wrapper">
    <form method="post" asp-controller="User" asp-action="Authenticate">
    <div asp-validation-summary="ModelOnly"></div>
    <div id="auth">
        <div class="form-group">
            <label asp-for="Login"></label><br />
            <input asp-for="Login" />
            <span asp-validation-for="Login"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password"></span>
        </div> 
    </div>
    <div id="auth-other">
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Войти" />
        </div>
        <div class="form-group">
            <div>Ещё нет аккаунта? <a asp-controller="User" asp-action="Register">Зарегистрируйтесь</a></div>
        </div>
    </div>
    </form>
</div>