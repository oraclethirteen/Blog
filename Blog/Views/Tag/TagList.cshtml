@model IEnumerable<Blog.Models.TagViewModel>

@{
    ViewData["Title"] = "Все теги";
}

<h4>Все теги</h4>

<p>
    <a asp-controller="Tag" asp-action="AddTag">Добавить тег</a>
</p>

@foreach (var tag in Model)
{
    <div class="form-group">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">
                    <a asp-controller="Tag" asp-action="EditTag" asp-route-id="@tag.Id">@tag.Title</a>
                </h5>
                <p class="card-text text-right">Статей с тегом: @tag.CountArticle</p>
                <div>
                    @if (User.IsInRole("Aдминистратор"))
                    {
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" class="btn btn-outline-danger">
                                <a asp-controller="Tag" asp-action="Delete" asp-route-id="@tag.Id">Удалить</a>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}